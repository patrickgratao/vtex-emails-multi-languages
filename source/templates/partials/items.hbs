<table class="" width="100%" border="0" cellpadding="0" cellspacing="0">
  <thead>
  </thead>
  <tbody class="custom__items">
  {{#each items}}
    <!-- back to order items list -->
    {{#each ../../../../items}}
      <!-- show info for this shippingInfo item -->
      {{#eq @index ../itemIndex}}
        <tr>
          <td class="v-top pv2 w3 pr2 tc"><img alt="" src="{{imageUrl}}" /></td>
        </tr>

        <tr>
          <td class="v-top pv2 tc">
            <div class="f5 lh-title mv1-ns custom__text">{{name}}</div>
          </td>
        </tr>

        <tr>
          <td class="v-top pv2 tc">
            <div class="gray custom__sub-text">
              {{quantity}} ((i18n.common.units))
              {{#if sellingPrice}}
                ((i18n.common.currency)) {{formatCurrency sellingPrice}}
              {{else}}
                ((i18n.common.free))
              {{/if}}
            </div>
          </td>
        </tr>

        {{#each bundleItems}}
          {{#if name}}
            <tr>
              <td class="v-top pv2 w3 pr2"><img alt="" src="{{imageUrl}}" /></td>
            </tr>

            <tr>
              <td class="v-top pv2">
                <div class="f5 lh-title mv1-ns custom__text">{{name}}</div>
              </td>
            </tr>

            <tr>
              <td class="v-top pv2">
                <div class="gray custom__sub-text">
                  {{quantity}} ((i18n.common.units))
                  {{#if price}}
                    ((i18n.common.currency)) {{formatCurrency price}}
                  {{else}}
                    ((i18n.common.free))
                  {{/if}}
                </div>
              </td>
            </tr>
          {{/if}}
        {{/each}}
      {{/eq}}
    {{/each}}
    </tbody>
  {{/each}}
</table>
