<div class="fl w-100 mw5-5 pb3 pr4-ns v-top mt2 custom__boxes">
  <h3 class="custom__heading3">((i18n.common.summary))</h3>
  <table width="100%" border="0" cellpadding="0" cellspacing="0">
    {{#each totals}}
      {{#if value}}
      <tr>
        <td class="pv1 bb b--light-gray custom__text-left">
          {{#eq id "Items"}}((i18n.common.items)){{/eq}}
          {{#eq id "Shipping"}}((i18n.common.shipping)){{/eq}}
          {{#eq id "Discounts"}}((i18n.common.discounts)){{/eq}}
          {{#eq id "Tax"}}((i18n.common.taxes)){{/eq}}
        </td>
        <td class="pv1 bb b--light-gray tr custom__text-right">((i18n.common.currency)) {{formatCurrency value}}</td>
      </tr>
      {{/if}}
    {{/each}}
    {{#if value}}
      <tr>
        <td class="pv1 fw5 custom__text-left">((i18n.common.total))</td>
        <td class="pv1 fw5 align-right tr custom__text-right">((i18n.common.currency)) {{formatCurrency value}}</td>
      </tr>
    {{/if}}
  </table>
</div>
