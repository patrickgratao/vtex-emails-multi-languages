<table width="100%" border="0" cellpadding="0" cellspacing="0">
    <tr>
      <td align="center" valign="top">
        <table class="w-100 mw6-5 bg-white email__wrapper" width="100%" align="center" border="0" cellpadding="0" cellspacing="0">

          <!-- Header -->
          <tr>
            <td class="w-100 ph0 pb4 bb b--light-gray tc">
              <!-- partial:partials/main/_header.hbs -->
              <!-- partial -->

              <!-- Just 1 package -->
              {{#compare items.length '==' shippingData.logisticsInfo.length}}
              {{#compare shippingData.logisticsInfo.0.selectedDeliveryChannel '==' 'pickup-in-point'}}
              <h1 class="header__title">((i18n.shipping.onePackagePickup))</h1>
              {{else}}
              <h1 class="header__title">((i18n.shipping.onePackageDelivery))
              </h1>
              {{/compare}}

              <!-- partial:partials/messages/order-reference.hbs -->
              <!-- partial -->
              <!-- partial:partials/messages/cant-cancel.hbs -->
              <!-- partial -->

              <!-- More than 1 package -->
              {{else}}
              {{#compare shippingData.logisticsInfo.0.selectedDeliveryChannel '==' 'pickup-in-point'}}
              <h1 class="header__title">((i18n.shipping.manyPackagesPickup))</h1>
              {{else}}
              <h1 class="header__title">((i18n.shipping.manyPackagesDelivery))</h1>
              {{/compare}}

              <!-- partial:partials/messages/order-reference.hbs -->
              <!-- partial -->
              <!-- partial:partials/messages/cant-cancel.hbs -->
              <!-- partial -->

              <div class="bg-light-gray ph3 pv3 mt4 fw7 dib w-70-ns center lh-copy">
                <div>((i18n.shipping.manyPackages))</div>
                <div>((i18n.shipping.notifications))</div>
              </div>
              {{/compare}}
            </td>
          </tr>

          <tr>
            <td class="w-100 ph4-ns">
              <!-- Intro message: All items shipped -->

              {{#compare shippingData.logisticsInfo.0.selectedDeliveryChannel '==' 'pickup-in-point'}}
              <!-- partial:partials/messages/pickup.hbs -->
              <!-- partial -->
              {{else}}
              <!-- partial:partials/messages/shipping.hbs -->
              <!-- partial -->
              {{/compare}}

              <p class="custom__text">
                ((i18n.common.cancelationInstructions))
              </p>
            </td>
          </tr>

          <!-- Order info -->
          <tr>
            <td class="w-100 ph4-ns pv3">
              {{#richShippingData shippingData}}
              {{#group logisticsInfo by="addessId"}}
              <div class="cb fn">
                <h3 class="ma0 mb2 custom__heading3">((i18n.shipping.address))</h3>
                <!-- Address info -->
                <!-- partial:partials/address-delivery-no-title.hbs -->
                <!-- partial -->
                <!-- partial:partials/address-pickup-no-title.hbs -->
                <!-- partial -->
                <!-- partial:partials/address-pickup-business-hours.hbs -->
                <!-- partial -->
              </div>
              {{/group}}
              {{/richShippingData}}
            </td>
          </tr>

          <tr>
            <td class="ph4-ns pv3 bt b--light-gray">
              {{#richShippingData shippingData}}
              {{#group logisticsInfo by="addessId"}}
              <div class="cb fn">
                <h3 class="ma0 mb2 custom__heading3">((i18n.order.package))</h3>
                <!-- Address info -->

                {{#group items by="packageId"}}
                {{#compare items.0.selectedDeliveryChannel '==' 'pickup-in-point'}}
                <!-- partial:partials/items.hbs -->
                <!-- partial -->
                {{else}}
                <!-- partial:partials/package.hbs -->
                <!-- partial -->
                {{/compare}}
                {{/group}}
              </div>
              {{/group}}
              {{/richShippingData}}
            </td>
          </tr>
        </table>
      </td>
    </tr>
    <tr>
      <td align="center" valign="top">
        <!-- partial:partials/main/_footer.hbs -->
        <!-- partial -->
      </td>
    </tr>
  </table>
</body>

</html>
