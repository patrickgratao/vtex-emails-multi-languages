  <table width="100%" border="0" cellpadding="0" cellspacing="0">
    <tr>
      <td align="center" valign="top">
        <table class="w-100 mw6-5 bg-white email__wrapper" width="100%" align="center" border="0" cellpadding="0" cellspacing="0">

          <!-- Header -->
          <tr>
            <td class="w-100 ph0 pb4 bb b--light-gray tc">
              <!-- partial:partials/main/_header.hbs -->
              <!-- partial -->

              <h1 class="header__title">((i18n.invoice.invoiced))</h1>
              <!-- partial:partials/messages/order-reference.hbs -->
              <!-- partial -->

              <!-- partial:partials/messages/cant-cancel.hbs -->
              <!-- partial -->

              <!-- Alert: mode than 1 invoice -->
              {{#compare items.length '!=' shippingData.logisticsInfo.length}}
              <div class="bg-light-gray ph3 pv3 mt4 fw7 dib w-70-ns center lh-copy">
                <div>((i18n.invoice.manyInvoices))</div>
                <div>((i18n.invoice.notifications))</div>
              </div>
              {{/compare}}
            </td>
          </tr>

          <tr>
            <td class="w-100 ph4-ns">
              <div class="mt4">
                <!-- Intro message: if not inStore anonymous purchase -->
                {{#if clientProfileData.firstName}}
                {{#compare clientProfileData.firstName '!=' 'isAnonymous'}}
                <p class="custom__text">
                  <!-- partial:partials/messages/hi.hbs -->
                  <!-- partial -->
                  <!-- partial:partials/messages/handling.hbs -->
                  <!-- partial -->
                </p>
                {{/compare}}
                {{/if}}

                <p class="custom__text">
                  ((i18n.common.cancelationInstructions))
                </p>
              </div>
            </td>
          </tr>

          <!-- Order info -->
          <tr>
            <td class="w-100 ph4-ns pt3 pb4">
              {{#richShippingData shippingData}}
              {{#group logisticsInfo by="addessId"}}
              <div class="cb fn">
                {{#compare items.length '>' 1}}
                <h3 class="ma0 custom__heading3">((i18n.invoice.products))</h3>
                {{else}}
                <h3 class="ma0 custom__heading3">((i18n.invoice.product))</h3>
                {{/compare}}

                {{#group items by="packageId"}}
                <!-- partial:partials/items.hbs -->
                <!-- partial -->
                {{/group}}
              </div>
              {{/group}}
              {{/richShippingData}}
            </td>
          </tr>

          <tr>
            <td class="ph4-ns pv3 bt b--light-gray">
              <!-- partial:partials/messages/regards.hbs -->
              <!-- partial -->
            </td>
          </tr>
        </table>
      </td>
    </tr>
    <tr>
      <td align="center" valign="top">
        <!-- partial:partials/main/_footer.hbs -->
        <!-- partial -->
      </td>
    </tr>
  </table>
</body>

</html>
